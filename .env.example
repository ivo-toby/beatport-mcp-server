# Beatport MCP Server Configuration
# Copy this to .env and fill in your credentials

# Required: Your Beatport account credentials
BEATPORT_USERNAME=your@email.com
BEATPORT_PASSWORD=yourpassword

# Optional: Default Beatport API client credentials
# Default client ID found from browser session - should work for most users
BEATPORT_DEFAULT_CLIENT_ID=MTZS0g1HCT1RIyBeJFCq7N6aBRbeEDDJlDC397ht
# Client secret may not be required for public OAuth clients
# BEATPORT_DEFAULT_CLIENT_SECRET=

# Optional: Transport configuration
# TRANSPORT_TYPE=stdio
# HTTP_PORT=3000
# HTTP_HOST=127.0.0.1
# ENDPOINT_PATH=/mcp

# Optional: Server identification
# SERVER_NAME=beatport-mcp-server
# SERVER_VERSION=1.0.0

# Optional: Tools configuration
# TOOLS_MODE=all
# DISABLE_ABBREVIATION=false
